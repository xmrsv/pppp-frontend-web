---
import "@fontsource-variable/ibm-plex-sans";
import "../styles/main.scss";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <!-- favicon ico -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
  </head>

  <body>
    <slot />
  </body>
</html>
