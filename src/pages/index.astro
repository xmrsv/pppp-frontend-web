---
import DashboardLayout from "../layouts/DashboardLayout.astro";

const tracks = [
  { id: 0, student_name: "Ana García", university_code: "2021001", company: "Tech Solutions", status: "En Progreso", start_date: "15/03/2024" },
  { id: 1, student_name: "Carlos Pérez", university_code: "2020050", company: "Innovatech", status: "Pendiente Docs", start_date: "01/04/2024" },
  { id: 2, student_name: "María López", university_code: "2021003", company: "Global Corp", status: "Completado", start_date: "25/03/2024" },
  { id: 3, student_name: "Carlos Fernández", university_code: "2021004", company: "Tech Innovators", status: "En Progreso", start_date: "30/03/2024" },
];
---

<DashboardLayout>
  <h1>Seguimiento de Prácticas</h1>
  <p>Vista general del estado de los estudiantes.</p>

  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>Nombre del estudiante</th>
          <th>Código universitario</th>
          <th>Empresa</th>
          <th>Estado</th>
          <th>Fecha de inicio</th>
        </tr>
      </thead>
      <tbody>
        {
          tracks.map((track) => (
            <tr>
              <td>{track.student_name}</td>
              <td>{track.university_code}</td>
              <td>{track.company}</td>
              <td><span class={`status-badge status-${track.status.toLowerCase().replace(' ', '-')}`}>{track.status}</span></td>
              <td>{track.start_date}</td>
            </tr>
          ))
        }
      </tbody>
    </table>
  </div>
</DashboardLayout>