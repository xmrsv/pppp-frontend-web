<style lang="scss">
  nav {
    background-color: hsl(221, 94%, 13%);
    padding: 1rem;

    color: hsl(0, 0%, 100%);

    ul {
      max-width: fit-content;
      gap: 1.5rem;
      display: flex;
      justify-content: space-between;
      list-style: none;
      li {
        a {
          color: inherit;
          text-decoration: none;
        }
      }
    }
  }
</style>

<header>
  <nav>
    <ul id="nav-items">
      <!-- Los elementos se generarán dinámicamente -->
    </ul>
  </nav>
</header>

<script>
  import { getNavigationItems, initializeAuthUI } from "../utils/auth.util";

  // Generar elementos de navegación dinámicamente
  const navItems = document.getElementById('nav-items');
  if (navItems) {
    const items = getNavigationItems();
    navItems.innerHTML = items.map(item => 
      `<li><a href="${item.href}">${item.text}</a></li>`
    ).join('');
  }

  // Inicializar UI basada en autenticación
  initializeAuthUI();
</script>
